@model Dziennik_szkolny.Models.Rodzic

@{
    ViewData["Title"] = "Mój Profil";
}

<h1>Mój Profil</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Imię</dt>
            <dd class="col-sm-9">@Model.Imie</dd>

            <dt class="col-sm-3">Nazwisko</dt>
            <dd class="col-sm-9">@Model.Nazwisko</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Telefon</dt>
            <dd class="col-sm-9">@Model.Telefon</dd>

            <dt class="col-sm-3">Dziecko</dt>
            <dd class="col-sm-9">@Model.Uczen?.Imie @Model.Uczen?.Nazwisko</dd>

            <dt class="col-sm-3">Klasa dziecka</dt>
            <dd class="col-sm-9">@Model.Uczen?.Klasa?.NazwaKlasy</dd>

            <dt class="col-sm-3">Konto użytkownika</dt>
            <dd class="col-sm-9">@Model.Konto?.Nazwa</dd>
        </dl>

        <div class="mt-3">
            <a asp-action="EditProfile" class="btn btn-primary">Edytuj dane kontaktowe</a>
            <a asp-controller="Parent" asp-action="Dashboard" class="btn btn-secondary">Powrót do Dashboard</a>
        </div>
    </div>
</div>
