<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dziennik_szkolny</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Dziennik_szkolny.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @if (User.IsInRole("Admin"))
                {
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">Dziennik szkolny</a>
                }
                else if (User.IsInRole("Nauczyciel"))
                {
                    <a class="navbar-brand" asp-controller="Teacher" asp-action="Dashboard">Dziennik szkolny</a>
                }
                else if (User.IsInRole("Uczen"))
                {
                    <a class="navbar-brand" asp-controller="Student" asp-action="Dashboard">Dziennik szkolny</a>
                }
                else if (User.IsInRole("Rodzic"))
                {
                    <a class="navbar-brand" asp-controller="Parent" asp-action="Dashboard">Dziennik szkolny</a>
                }
                else
                {
                    <a class="navbar-brand" asp-controller="Account" asp-action="Login">Dziennik szkolny</a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Panel Admin</a>
                                </li>
                            }
                            else if (User.IsInRole("Nauczyciel"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Teacher" asp-action="Dashboard">Panel</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Teacher" asp-action="MyStudents">Uczniowie</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Teacher" asp-action="ViewGrades">Oceny</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Raporty" asp-action="Index">Raporty</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Teacher" asp-action="MyProfile">Mój Profil</a>
                                </li>
                            }
                            else if (User.IsInRole("Uczen"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Student" asp-action="Dashboard">Panel</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Student" asp-action="MyGrades">Moje oceny</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Student" asp-action="MySubjects">Przedmioty</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Student" asp-action="MyProfile">Mój Profil</a>
                                </li>
                            }
                            else if (User.IsInRole("Rodzic"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Parent" asp-action="Dashboard">Panel</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Parent" asp-action="ChildGrades">Oceny dziecka</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Parent" asp-action="ChildSubjects">Przedmioty</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Parent" asp-action="MyProfile">Mój Profil</a>
                                </li>
                            }
                        }
                    </ul>
                    <div class="d-flex align-items-center">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <span class="navbar-text me-3">
                                <strong>@User.Identity.Name</strong> (@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value)
                            </span>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline me-2">
                                <button type="submit" class="btn btn-sm btn-outline-danger">Wyloguj</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Dziennik_szkolny - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
