@model dynamic

@{
    ViewData["Title"] = "Raport przedmiotów";
}

<h1>Raport przedmiotów</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nazwa przedmiotu</th>
            <th>Nauczyciel</th>
            <th>Liczba klas</th>
            <th>Liczba ocen</th>
            <th>Średnia ocen</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Przedmiot.Nazwa</td>
                    <td>
                        @if (item.Przedmiot.Nauczyciel != null)
                        {
                            @item.Przedmiot.Nauczyciel.Imie @item.Przedmiot.Nauczyciel.Nazwisko
                        }
                        else
                        {
                            <span class="text-muted">Nie przypisano</span>
                        }
                    </td>
                    <td>@item.LiczbaKlas</td>
                    <td>@item.LiczbaOcen</td>
                    <td>
                        @if (item.SredniaOcen > 0)
                        {
                            <span class="badge badge-@(item.SredniaOcen >= 5.0 ? "success" : item.SredniaOcen >= 4.0 ? "info" : item.SredniaOcen >= 3.0 ? "warning" : "danger")" style="font-size: 1.1em;">@item.SredniaOcen</span>
                        }
                        else
                        {
                            <span class="text-muted">Brak ocen</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">Brak przedmiotów</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Raport ocen</a>
    <a asp-action="Uczniowie" class="btn btn-secondary">Raport uczniów</a>
</div>
