@model dynamic

@{
    ViewData["Title"] = "Raport uczniów";
}

<h1>Raport uczniów</h1>

<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="klasaId">Klasa</label>
                <select name="klasaId" id="klasaId" class="form-control">
                    <option value="">Wszystkie klasy</option>
                    @foreach (var item in (SelectList)ViewData["KlasaId"])
                    {
                        <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label>&nbsp;</label>
                <button type="submit" class="btn btn-primary form-control">Filtruj</button>
            </div>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Imie i nazwisko</th>
            <th>Klasa</th>
            <th>Liczba ocen</th>
            <th>Srednia ocen</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Uczen.Imie @item.Uczen.Nazwisko</td>
                    <td>@item.Uczen.Klasa.NazwaKlasy</td>
                    <td>@item.LiczbaOcen</td>
                    <td>
                        @if (item.SredniaOcen > 0)
                        {
                            <span class="badge bg-@(item.SredniaOcen >= 5.0 ? "success" : item.SredniaOcen >= 4.0 ? "info" : item.SredniaOcen >= 3.0 ? "warning" : "danger")" style="font-size: 1.1em;">@item.SredniaOcen</span>
                        }
                        else
                        {
                            <span class="text-muted">Brak ocen</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">Brak uczniów</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Raport ocen</a>
    <a asp-action="Przedmioty" class="btn btn-secondary">Raport przedmiotów</a>
</div>
