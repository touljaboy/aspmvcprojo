@using Dziennik_szkolny.Models
@{
    ViewData["Title"] = "Główna strona Dziennika Szkolnego";
    var links = (List<string>)ViewBag.ResourceLinks;
    var ogloszenia = (List<Ogloszenie>)ViewBag.Ogloszenia;
}

<h1>Dziennik szkolny</h1>

<div class="row">
    <div class="col-md-8">
        <h2>Ostatnie ogłoszenia</h2>
        @if (ogloszenia != null && ogloszenia.Any())
        {
            <div class="list-group mb-4">
                @foreach (var ogloszenie in ogloszenia)
                {
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@ogloszenie.Tytul</h5>
                            <small>@ogloszenie.Data.ToString("dd.MM.yyyy HH:mm")</small>
                        </div>
                        <p class="mb-1">@ogloszenie.Tresc</p>
                    </div>
                }
            </div>
            <a asp-controller="Ogloszenia" asp-action="Index" class="btn btn-primary">Zobacz wszystkie ogłoszenia</a>
        }
        else
        {
            <p class="text-muted">Brak ogłoszeń</p>
        }
    </div>
    
    <div class="col-md-4">
        <h2>Menu</h2>
        <div class="list-group">
            @foreach (var controllerName in links)
            {
                <a asp-controller="@controllerName" asp-action="Index" class="list-group-item list-group-item-action">
                    @controllerName 
                </a>
            }
        </div>
    </div>
</div>

<hr />