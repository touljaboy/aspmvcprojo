@model IEnumerable<Ocena>

@{
    ViewData["Title"] = "Oceny uczniów";
}

<h1>Oceny uczniów</h1>

<div class="row mb-3">
    <div class="col-md-12">
        <form method="get" class="form-inline">
            <div class="form-group mr-3">
                <label for="klasaId" class="mr-2">Klasa:</label>
                <select name="klasaId" id="klasaId" class="form-control" onchange="this.form.submit()">
                    <option value="">-- Wszystkie klasy --</option>
                    @foreach (var klasa in ViewBag.KlasaId as SelectList)
                    {
                        <option value="@klasa.Value" selected="@(klasa.Selected ? "selected" : null)">@klasa.Text</option>
                    }
                </select>
            </div>
            
            <div class="form-group mr-3">
                <label for="przedmiotId" class="mr-2">Przedmiot:</label>
                <select name="przedmiotId" id="przedmiotId" class="form-control" onchange="this.form.submit()">
                    <option value="">-- Wszystkie przedmioty --</option>
                    @foreach (var przedmiot in ViewBag.PrzedmiotId as SelectList)
                    {
                        <option value="@przedmiot.Value" selected="@(przedmiot.Selected ? "selected" : null)">@przedmiot.Text</option>
                    }
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Filtruj</button>
            @if (Context.Request.Query.ContainsKey("klasaId") || Context.Request.Query.ContainsKey("przedmiotId"))
            {
                <a href="@Url.Action("ViewGrades")" class="btn btn-secondary ml-2">Wyczysc filtry</a>
            }
        </form>
    </div>
</div>

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Uczen</th>
                <th>Klasa</th>
                <th>Przedmiot</th>
                <th>Ocena</th>
                <th>Opis</th>
                <th>Data</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Uczen.Imie @item.Uczen.Nazwisko</td>
                    <td>@item.Uczen.Klasa.NazwaKlasy</td>
                    <td>@item.Przedmiot.Nazwa</td>
                    <td>
                        <span class="badge bg-@(item.Wartosc >= 5 ? "success" : item.Wartosc >= 4 ? "info" : item.Wartosc >= 3 ? "warning" : "danger")" style="font-size: 1.1em;">
                            @item.Wartosc
                        </span>
                    </td>
                    <td>@item.Opis</td>
                    <td>@item.Data.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
    
    <div class="alert alert-info">
        <strong>Liczba ocen:</strong> @Model.Count()
        <br />
        <strong>Srednia:</strong> @Math.Round(Model.Average(o => o.Wartosc), 2)
    </div>
}
else
{
    <div class="alert alert-warning">
        Brak ocen spelniajacych wybrane kryteria.
    </div>
}

<div class="mt-3">
    <a href="@Url.Action("Dashboard")" class="btn btn-secondary">Powrót do panelu</a>
</div>
