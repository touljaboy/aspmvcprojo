@model Dziennik_szkolny.Models.Nauczyciel

@{
    ViewData["Title"] = "Mój profil";
}

<h1>Mój profil</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4>Dane osobowe</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Imię:</dt>
                    <dd class="col-sm-8">@Model.Imie</dd>
                    
                    <dt class="col-sm-4">Nazwisko:</dt>
                    <dd class="col-sm-8">@Model.Nazwisko</dd>
                    
                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@(Model.Email ?? "Nie podano")</dd>
                    
                    <dt class="col-sm-4">Telefon:</dt>
                    <dd class="col-sm-8">@(Model.Telefon ?? "Nie podano")</dd>
                    
                    <dt class="col-sm-4">Wychowawca:</dt>
                    <dd class="col-sm-8">@(Model.CzyWychowawca ? "Tak" : "Nie")</dd>
                    
                    @if (Model.Przelozony != null)
                    {
                        <dt class="col-sm-4">Przełożony:</dt>
                        <dd class="col-sm-8">@Model.Przelozony.Imie @Model.Przelozony.Nazwisko</dd>
                    }
                    
                    <dt class="col-sm-4">Login:</dt>
                    <dd class="col-sm-8">@Model.Konto.Nazwa</dd>
                </dl>
                
                <div class="mt-3">
                    <a asp-action="EditProfile" class="btn btn-primary">Edytuj dane kontaktowe</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Dashboard" class="btn btn-secondary">Powrót do panelu</a>
</div>
